        <label for="uname">เบอร์โทร: </label>
        <input name="phoneNumber" type="text" />
        <br />
        <label for="uname">Facebook: </label>
        <input name="facebook" type="text" />
        <br />
        <label for="uname">Email: </label>
        <input name="email" type="text" />
